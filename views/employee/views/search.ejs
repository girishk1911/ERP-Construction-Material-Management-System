<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Search</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
    </div>
  </div>
</div>

<div class="table-responsive">
  <% if (sites && sites.length > 0) { %>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Site Number</th>
          <th scope="col">Site Name</th>
          <th scope="col">Site Location</th>
          
        </tr>
      </thead>
      <tbody>
        <% sites.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.SiteNumber %></td>
            <td><%= element.SiteName %></td>
            <td><%= element.SiteLocation %></td>
            <td>
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/view/<%= element._id %>" class="btn btn-primary btn-sm">
                  <i class="bi bi-eye"></i> View
                </a>
                <a href="/edit/<%= element._id %>" class="btn btn-warning btn-sm">
                  <i class="bi bi-pencil"></i> Edit
                </a>
                <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-person-x"></i> Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else if (sites && sites.length > 0) { %>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Site Number</th>
          <th scope="col">Material</th>
          <th scope="col">Site Manager</th>
          
        </tr>
      </thead>
      <tbody>
        <% sites.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.SiteNumber %></td>
            <td><%= element.Material %></td>
            <td><%= element.SiteManger1 %></td>
            <td>
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/view/<%= element._id %>" class="btn btn-primary btn-sm">
                  <i class="bi bi-eye"></i> View
                </a>
                <a href="/edit/<%= element._id %>" class="btn btn-warning btn-sm">
                  <i class="bi bi-pencil"></i> Edit
                </a>
                <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-person-x"></i> Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h2>No results found in the database.</h2>
  <% } %>
</div>
