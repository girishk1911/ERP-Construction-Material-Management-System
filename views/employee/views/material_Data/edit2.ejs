<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editing: <%= material.SiteNumber1 %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= material.Material %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(material.updatedAt).toUTCString()  %></b>
      <b>MaterialId:</b> <%= material._id %>
    </div>
  </div>

</div>


<form action="/edit2/<%= material._id %>?_method=PUT" method="POST">


  <div class="row form-group mb-4">

    <div class="col">
      <label for="SiteNumber">Site Number</label>
      <input type="text" class="form-control" id="SiteNumber1" name="SiteNumber1" value="<%= material.SiteNumber1 %>" placeholder="SiteNumber" required>
    </div>

    
  </div>

  <div class="row form-group mb-4">

    <div class="col">
      <label for="Material">material</label>
      <input type="text" class="form-control" id="Material" name="Material" value="<%= material.Material %>" placeholder="material" required>
    </div>

    <div class="col">
      <label for="TruckNo1">truck no</label>
      <input type="text" class="form-control" id="TruckNo1" name="TruckNo1" value="<%= material.TruckNo1 %>" placeholder="Truck number" required>
    </div>

  </div>

   <div class="row form-group mb-4">

    <div class="col">
      <label for="Quantity">material Quantity</label>
      <input type="text" class="form-control" id="Quantity" name="Quantity" value="<%= material.Quantity %>" placeholder=" material Quantity" required>
    </div>

    <div class="col">
      <label for="details">Deatils</label>
      <input type="text" class="form-control" id="details" name="details" value="<%= material.details %>" placeholder="Deatails" required>
    </div>

  </div>

   <div class="row form-group mb-4">
      <label for="Cost">Cost</label>
      <input type="text" class="form-control" id="Cost" name="Cost" value="<%= material.Cost %>" placeholder="Cost" required>
    </div>


   <div class="row form-group mb-4">
      <label for="DealerNname">Dealer name</label>
      <input type="text" class="form-control" id="DealerName" name="DealerName" value="<%= material.DealerName %>" placeholder="Dealer name" required>
    </div>

     <div class="row form-group mb-4">
      <label for="SiteManager1">Sitemanger name</label>
      <input type="text" class="form-control" id="SiteManger1" name="SiteManger1" value="<%= material.SiteManger1 %>" placeholder="SiteManger name" required>
    </div>
  

     <div class="form-group mb-4">
       <button type="submit" class="btn btn-primary">Add Material</button>
     </div>
  </div>

</div>
  

</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a material record.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the material record of <b class="fw-bold"><%= material.Material %></b><br/>
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/edit2/<%= material._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Yes, Remove Site</button>
        </form>
      </div>
    </div>
  </div>
</div>